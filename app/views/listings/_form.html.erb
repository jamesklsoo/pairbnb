<div class="spacing"></div>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="row">
  <div class="col-md-4 form-group">
    <%= f.label :room_number %>
    <%= f.number_field :room_number, class: "form-control" %>
  </div>
  <div class="col-md-4 form-group">
    <%= f.label :bed_number %>
    <%= f.number_field :bed_number, class: "form-control" %>
  </div>
  <div class="col-md-4 form-group">
    <%= f.label :guest_number %>
    <%= f.number_field :guest_number, class: "form-control" %>
  </div>
</div>
<div class="row">
  <div class="col-md-3 form-group">
    <%= f.label :country %>
    <%= f.text_field :country, class: "form-control" %>
  </div>
  <div class="col-md-3 form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </div>
  <div class="col-md-3 form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </div>
  <div class="col-md-3 form-group">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :address %>
  <%= f.text_field :address, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :price %>
  <%= f.number_field :price, class: "form-control" %>
</div>
<div class="row">
  <div class="col-md-6 form-group">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="col-md-6 form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :property_type %>
  <%= f.select :property_type, Listing.property_types.keys.map {|type| [type.titleize, type]}, class: "form-control" %>
</div>
<div class="text-center">
  <%= f.submit "Submit", class: "btn btn-default" %>
</div>
<div class="spacing"></div>