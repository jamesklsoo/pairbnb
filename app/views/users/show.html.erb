<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
    <h1 class="text-center">
      <%= @user.username %> Profile
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
    <h1 class="text-center">
      <%= @user.email %>
    </h1>
  </div>
</div>
<% if current_user == @user %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
      <%= link_to "Edit", edit_user_path(current_user), class: "btn btn-default" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
      <%= link_to "Destroy", user_path(current_user), method: :delete, data: {confirmation: "Are you sure?"}, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>