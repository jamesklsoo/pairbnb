<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <form class="form-inline">
      <%= form_tag(listings_path, :method => "get", id: "search-form") do %>
        <div class="form-group">
          <%= text_field_tag :location, params[:location], placeholder: "Search Location", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= date_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= date_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= number_field_tag :pax, params[:pax], placeholder: "No. of People", class: "form-control" %>
        </div>
        <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
      <% end %>
    </form>
  </div>
</div>